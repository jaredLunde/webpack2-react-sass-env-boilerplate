{
  "env": {
    "production": {
      "presets": ["react", "react-optimize", [
        "env", {
            "debug": true,
            "modules": false,
            "useBuiltIns": true,
            "targets": {
              "browsers": "defaults"
            }
          }
        ]
      ],
      "plugins": ["transform-decorators-legacy", "transform-class-properties"]
    },
    "development": {
      "presets": ["react", [
        "env", {
            "debug": false,
            "modules": false,
            "useBuiltIns": true,
            "targets": {
              "browsers": {
                "chrome": ">=56"
              }
            }
          }
        ]
      ],
      "plugins": [
        "react-hot-loader/babel",
        "transform-decorators-legacy",
        "transform-class-properties"
      ]
    },
    "cli": {
      "presets": ["react", [
        "env", {
            "debug": true,
            "modules": false,
            "targets": {
              "node": "current"
            }
          }
        ]
      ],
      "plugins": ["transform-decorators-legacy", "transform-class-properties"]
    }
  }
}
